{
  "manifest_version": 2,

  "name": "Jisho-me",
  "description": "This extension pulls information from Jisho.org based on highlighted text",
  "version": "0.0.0",

  "omnibox": { "keyword" : "jisho" },
  "browser_action": {
    "default_icon": "icon.png"
  },
  "background": {
    "scripts": ["popup.js"],
    "persistent": false
  },
  "content_scripts":[{
    "matches":["http://*/*","https://*/*"],
    "js":["inject.js"]
  }],
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "notifications"
  ],
  "commands": {
        "jisho-me": {
          "suggested_key": {
            "default": "Ctrl+Shift+A",
            "mac": "Command+Shift+A"
          },
          "description": "Search Jisho"
        },
        "_execute_browser_action": {
          "suggested_key": {
            "windows": "Ctrl+Shift+Y",
            "mac": "Command+Shift+Y",
            "chromeos": "Ctrl+Shift+U",
            "linux": "Ctrl+Shift+J"
          }
        },
        "_execute_page_action": {
          "suggested_key": {
            "default": "Ctrl+Shift+E",
            "windows": "Alt+Shift+P",
            "mac": "Alt+Shift+P"
          }
        }
      }
}
